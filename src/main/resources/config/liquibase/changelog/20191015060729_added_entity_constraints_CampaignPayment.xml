<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity CampaignPayment.
    -->
    <changeSet id="20191015060729-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="fund_raiser_bank_id"
                                 baseTableName="campaign_payment"
                                 constraintName="fk_campaign_payment_fund_raiser_bank_id"
                                 referencedColumnNames="id"
                                 referencedTableName="fund_raiser_bank"/>

        <addForeignKeyConstraint baseColumnNames="campaign_id"
                                 baseTableName="campaign_payment"
                                 constraintName="fk_campaign_payment_campaign_id"
                                 referencedColumnNames="id"
                                 referencedTableName="campaign"/>

        <addForeignKeyConstraint baseColumnNames="company_bank_id"
                                 baseTableName="campaign_payment"
                                 constraintName="fk_campaign_payment_company_bank_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company_bank"/>

    </changeSet>
</databaseChangeLog>
