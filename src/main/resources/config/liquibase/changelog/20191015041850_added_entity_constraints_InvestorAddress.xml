<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity InvestorAddress.
    -->
    <changeSet id="20191015041850-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="city_id"
                                 baseTableName="investor_address"
                                 constraintName="fk_investor_address_city_id"
                                 referencedColumnNames="id"
                                 referencedTableName="city"/>

        <addForeignKeyConstraint baseColumnNames="province_id"
                                 baseTableName="investor_address"
                                 constraintName="fk_investor_address_province_id"
                                 referencedColumnNames="id"
                                 referencedTableName="province"/>

        <addForeignKeyConstraint baseColumnNames="country_id"
                                 baseTableName="investor_address"
                                 constraintName="fk_investor_address_country_id"
                                 referencedColumnNames="id"
                                 referencedTableName="country"/>

        <addForeignKeyConstraint baseColumnNames="investor_id"
                                 baseTableName="investor_address"
                                 constraintName="fk_investor_address_investor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="investor"/>

    </changeSet>
</databaseChangeLog>
